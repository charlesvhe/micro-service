{
  "Routes": [
    //ProviderService
    {
      "DownstreamPathTemplate": "/api/provider/request", //下游服务的访问路径
      "DownstreamScheme": "http", //下游服务是http还是https
      "DownstreamHostAndPorts": [ //下游服务的地址以及端口号
        {
          "Host": "localhost", //下游服务的地址
          "Port": "51000" //下游服务的端口号
        },
        {
          "Host": "localhost", //下游服务的地址
          "Port": "51001" //下游服务的端口号
        }
      ],
      "UpstreamPathTemplate": "/gateway/requestProviderOnly", //上游服务的访问路径
      "UpstreamHttpMethod": [ "GET" ] //上游服务的访问模式，本例里只用到了POST
    },
    {
      "DownstreamPathTemplate": "/api/provider/requestConsumer",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "51000"
        },
        {
          "Host": "localhost",
          "Port": "51001"
        }
      ],
      "UpstreamPathTemplate": "/gateway/requestConsumer",
      "UpstreamHttpMethod": [ "GET" ]
    },
    //ConsumerService
    {
      "DownstreamPathTemplate": "/api/consumer/request",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "52000"
        },
        {
          "Host": "localhost",
          "Port": "52001"
        }
      ],
      "UpstreamPathTemplate": "/gateway/requestConsumerOnly",
      "UpstreamHttpMethod": [ "Get" ]
    },
    {
      "DownstreamPathTemplate": "/api/consumer/requestProvider",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": "52000"
        },
        {
          "Host": "localhost",
          "Port": "52001"
        }
      ],
      "UpstreamPathTemplate": "/gateway/requestProvider",
      "UpstreamHttpMethod": [ "Get" ]
    }
  ]
}